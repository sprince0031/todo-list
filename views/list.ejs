<%- include("header") -%>
    <div class="box" id="heading">
        <h1><%= title %></h1>
    </div>
    <div class="box">
        <% listItems.forEach(element => { %>
            
            <div class="item">
                <input name="checkbox" type="checkbox" onchange="deleteItem('<%= element._id %>')">
                <p class="item"><%= element.item %></p>
            </div>
            
        <% }); %>
        <form class="item" action="<% `/${(title==='Today')?'':title}` %>" method="POST">
            <input type="text" name="new_item" placeholder="New Item" autocomplete="off" required>
            <button type="submit" name="list" value="<%= title %>">+</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script>
        function deleteItem(elementId) {
            console.log(`${elementId} will be deleted.`);
            $.ajax({
                url: '/' + '?' + $.param({'id': elementId}), 
                type: 'DELETE',
            }).done((result) => {
                console.log(result);
                location.reload();
            });
        }
    </script>
    
<%- include("footer") -%>