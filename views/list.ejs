<%- include("header") -%>
    <div class="box" id="heading">
        <h1><%= day %></h1>
    </div>
    <div class="box">
        <% listItems.forEach(element => { %>
            <div class="item">
                <input type="checkbox">
                <p class="item"><%= element %></p>
            </div>
        <% }); %>
        <form class="item" action="/" method="post">
            <input type="text" name="new_item" placeholder="New Item" autocomplete="off">
            <button type="submit">+</button>
        </form>
    </div>
    
<%- include("footer") -%>